// https://github.com/xiph/opus
meta("library", "Opus Audio");

function detect() {
    if (PE.isLibraryPresentExp(/^(opus(enc)?\.)|(ms|lib)opus|bass(_)?opus/i)) {
        bDetected = true;
    } else if (PE.isExportFunctionPresentExp(/^opus_(de|en)code/)) {
        sOptions = "EAT, static";
        bDetected = true;
    }

    return result();
}