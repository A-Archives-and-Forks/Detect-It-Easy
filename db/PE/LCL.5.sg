// Detect It Easy: detection rule file

includeScript("FPC");

meta("library", "LCL");

function detect() {
    if (bFPC) {
        var verInfoOffset = PE.findSignature(PE.section[0].FileOffset, PE.isOverlayPresent() ? PE.getOverlayOffset() : PE.getSize(), "'LCLVersion' ?? ?? %% '.' %%");
        if (verInfoOffset != -1) {
            sVersion = PE.getString(verInfoOffset + 12);
            bDetected = true;
        }
    }

    return result();
}